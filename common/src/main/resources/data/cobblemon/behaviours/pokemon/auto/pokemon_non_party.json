{
  "visible": false,
  "configurations": [
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && q.entity.behaviour.moving.walk.can_walk",
      "behaviours": [
        "cobblemon:wanders"
      ]
    },
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && q.entity.behaviour.moving.fly.can_fly",
      "behaviours": [
        "cobblemon:wanders_hover"
      ]
    },
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && q.entity.behaviour.moving.swim.can_swim_in_water && !q.entity.behaviour.moving.swim.avoids_water",
      "behaviours": [
        "cobblemon:wanders_water"
      ]
    },
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && (q.entity.behaviour.combat.will_flee && !q.entity.behaviour.combat.will_defend_self)",
      "behaviours": [
        "cobblemon:panics"
      ]
    },
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && q.entity.behaviour.combat.will_defend_self",
      "behaviours": [
        "cobblemon:retaliates"
      ]
    },
    {
      "type": "apply_behaviours",
      "condition": "!q.entity.is_in_party && q.entity.behaviour.moving.walk.avoids_land && q.entity.behaviour.moving.swim.can_swim_in_water",
      "behaviours": [
        "cobblemon:moves_to_water"
      ]
    },
    {
      "type": "add_tasks_to_activity",
      "activity": "minecraft:idle",
      "condition": "!q.entity.is_in_party && q.length(q.entity.config.pickup_items) > 0",
      "tasksByPriority": {
        "1": [
          "eat_held_item",
          "pickup_item",
          "stop_moving_to_item",
          {
            "type": "move_to_item",
            "condition": "(math.random(0, 1) < (1/10))"
          }
        ]
      }
    }
  ]
}