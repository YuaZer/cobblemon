{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:explosion_actorrelease",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/orb/scalingshaded"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": "120 * math.max(q.entity_radius,1)"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.8
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "(q.entity_radius+0.1)/3",
				"surface_only": true,
				"direction": ["math.random(-1,1)", "math.random(-1,1)+0.5", "math.random(-1,1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.25,0.75)"
			},
			"minecraft:particle_initial_speed": "math.random(15,40)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "-(v.particle_random_4 * 6) - 6", 0],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.2, 0.2],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 32,
					"uv": [0, "8 * math.floor(3 - 3*v.particle_age/v.particle_lifetime)"],
					"uv_size": [8, 8]
				}
			},
			"minecraft:particle_motion_collision": {
				"coefficient_of_restitution": 1,
				"collision_radius": 0.15,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.14": "#ffffffff",
						"0.4": "#FFFFFF55",
						"0.77": "#FFF47211",
						"1.0": "#FF3C0808"
					}
				}
			}
		}
	}
}