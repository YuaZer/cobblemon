{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:ember_firesparks",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/powder"
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "math.clamp(5*v.target_deltaz,10,20)",
				"max_particles": 1000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.45
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["-v.target_deltax*(v.emitter_age/v.emitter_lifetime)", "v.target_deltay*(v.emitter_age/v.emitter_lifetime)", "-0.225+math.clamp(v.target_deltaz*0.1,0,0.25)-(v.target_deltaz*(v.emitter_age/v.emitter_lifetime))"],
				"radius": 0.1,
				"surface_only": true,
				"direction": ["((v.particle_random_1-0.5)*0.33)", "((v.particle_random_2-0.5)*0.33)+((v.target_deltay*0.75)/v.target_distance)", -1]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.38
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random_integer(0,3)*90"
			},
			"minecraft:particle_initial_speed": "v.target_deltaz*0.75",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "(v.particle_random_1+0.5)*4", 0],
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.25, 0.25],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 99,
					"texture_height": 9,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [9, 9],
						"step_UV": [9, 0],
						"frames_per_second": 20,
						"max_frame": 11
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFFFF8C3",
						"0.34": "#FFFFE500",
						"1.0": "#FFFF4600"
					}
				}
			}
		}
	}
}