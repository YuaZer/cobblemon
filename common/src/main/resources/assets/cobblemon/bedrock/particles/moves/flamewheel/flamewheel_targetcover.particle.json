{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:flamewheel_targetcover",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.burstarc": {
				"type": "linear",
				"input": "v.emitter_age",
				"horizontal_range": "v.emitter_lifetime",
				"nodes": [0.06, 0.5, 0.78, 0.91, 0.97, 0.99, 0.96, 0.83, 0.55, 0.06]
			},
			"variable.fun": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 1, 0.96, 0.85, 0.6, -0.05]
			}
		},
		"events": {
			"auraCinder": {
				"particle_effect": {
					"effect": "cobblemon:flamewheel_actorcinder",
					"type": "particle"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 25,
				"max_particles": 1000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.25
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "(v.entity_height*(0.7-(v.particle_random_4*0.15)))*math.clamp(v.entity_scale,0.5,1))",
				"surface_only": true,
				"direction": ["math.random(-0.45,0.45)", "math.random(-0.35,0.35)", "math.random(-0.45,0.45)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.45,0.75)"
			},
			"minecraft:particle_lifetime_events": {
				"expiration_event": "auraCinder"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": 2,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "3+(v.particle_random_1-0.5)*2", "(v.particle_random_1-0.5)*4"],
				"linear_drag_coefficient": 2
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.45*v.fun", "0.45*v.fun"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 20,
						"max_frame": 10
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 2,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.15": "#FFFFE872",
						"0.35": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.875": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}