{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:explosion_actorfire",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.clampradius = math.max(1.65,q.entity_height,q.entity_width,q.entity_radius));"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "math.min(325*(v.clampradius*1.5), v.clampradius*350)*15",
				"max_particles": "455*v.clampradius"
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.max(v.entity_radius, 1.5)",
				"surface_only": true,
				"direction": ["math.random(-1,1)", "math.random(0.5,1)", "math.random(-1,1)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.6,1.3)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "90*math.random_integer(0,3)"
			},
			"minecraft:particle_initial_speed": "math.random(0,14) ",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*8", "(v.particle_random_2-0.5)*8", "(v.particle_random_3-0.5)*8"],
				"linear_drag_coefficient": "math.random(3,4)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.5, 0.5],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [32, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 1,
				"coefficient_of_restitution": 0.5,
				"collision_radius": 0.05,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "(v.particle_age) / (v.particle_lifetime)",
					"gradient": {
						"0.0": "#FFFFFBEA",
						"0.07": "#ffffffff",
						"0.24": "#FFFEFF85",
						"0.6": "#FFFF7B4C",
						"1.0": "#FF442828"
					}
				}
			}
		}
	}
}