			"minecraft:particle_initial_spin": {
				"rotation": "90*math.random_integer(0,3)"
			},
			"minecraft:particle_initial_speed": "((v.particle_random_4*0.5)+0.5)*20",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*5", "(v.particle_random_2-0.5)*5", "(v.particle_random_3-0.5)*5"],
