{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:flameburst_actor",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.burstarc": {
				"type": "linear",
				"input": "v.emitter_age",
				"horizontal_range": "v.emitter_lifetime",
				"nodes": [0.06, 0.48, 0.75, 0.92, 0.97, 0.99, 0.95, 0.8, 0.5, 0.05]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 25,
				"max_particles": 300
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.9
			},
			"minecraft:emitter_shape_point": {
				"offset": ["-v.target_deltax*(v.emitter_age/v.emitter_lifetime)", "v.target_deltay*(v.emitter_age/v.emitter_lifetime)+(v.burstarc*0.7)", "-v.target_deltaz*(v.emitter_age/v.emitter_lifetime)"],
				"direction": ["math.random(-0.45,0.45)", "(v.burstarc/math.clamp(v.target_deltaz*0.5,1,4))+math.random(-0.45,0.45)-(v.target_deltay/v.target_deltaz)", "math.random(-2.05,-0.55)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.58
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(2.75,3.25)*(v.target_deltaz*0.175)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "1.5+(v.particle_random_1-0.5)*3", "(v.particle_random_1-0.5)*3"],
				"linear_drag_coefficient": 1.5
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.45, 0.45],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 20,
						"max_frame": 10
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.2": "#FFFFE872",
						"0.4": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.9": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}