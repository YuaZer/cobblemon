{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:firespin_target",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.fun": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 1, 0.98, 0.92, 0.78, 0.51, 0]
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.entity_height=1;v.entity_radius=0.65;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "120*math.clamp(v.entity_radius,1,2)",
				"max_particles": 6000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.1
			},
			"minecraft:emitter_shape_point": {},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.6
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_motion_parametric": {
				"relative_position": ["(math.sin(v.particle_age*(260-(v.entity_height*8))+(v.particle_random_1*360))*(math.clamp(v.entity_radius*1.1,0.65,4)+(v.particle_age*1.25)))", "-0.05+(v.particle_random_1*0.05)+(v.particle_age*(math.clamp(v.entity_height*1.75,1,3)+(v.particle_random_2*1.25)))", "(math.cos(v.particle_age*(260-(v.entity_height*8))+(v.particle_random_1*360))*(math.clamp(v.entity_radius*1.1,0.65,4)+(v.particle_age*1.25)))"],
				"direction": [0, 1, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.4*v.fun", "0.45*v.fun"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 20,
						"max_frame": 10
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.2": "#FFFFE872",
						"0.4": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.9": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}