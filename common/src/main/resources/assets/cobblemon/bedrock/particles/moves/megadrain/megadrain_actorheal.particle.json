{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:megadrain_actorheal",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/generic/sparkle/sparkle"
			}
		},
		"curves": {
			"variable.crtrailsize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 0.67, 1, 1, 0.9, 0.5, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "math.clamp(11*v.entity_size,10,16)",
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.85
			},
			"minecraft:emitter_shape_box": {
				"half_dimensions": ["math.clamp(v.entity_width*0.95,0.5,20)", "math.clamp(v.entity_height*0.7,0.5,20)", "math.clamp(v.entity_width*0.95,0.5,20)"],
				"surface_only": true,
				"direction": ["(v.particle_random_1-0.5)*0.2", "((v.particle_random_2+0.25)*0.33)", "(v.particle_random_3-0.5)*0.2"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "0.95+(v.particle_random_4*0.1)"
			},
			"minecraft:particle_initial_speed": "0.5-(v.particle_random_4*0.05)",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "(v.particle_random_4+0.1)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.1-(v.particle_random_4*0.04))*(v.crtrailsize)", "(0.1-(v.particle_random_4*0.04))*(v.crtrailsize)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [7, 7],
						"step_UV": [0, 8],
						"frames_per_second": 2,
						"max_frame": 2
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00A5FF97",
						"0.23": "#FFE6FFDE",
						"0.75": "#BF89FFB3",
						"1.0": "#0000EB84"
					}
				}
			},
			"cobblemon:emitter_space": {
				"scaling": "entity"
			}
		}
	}
}