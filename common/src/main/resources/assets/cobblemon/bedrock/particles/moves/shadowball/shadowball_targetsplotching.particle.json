{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:shadowball_targetsplotching",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/generic/orb/xsfadeorb"
			}
		},
		"curves": {
			"variable.v": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 0.92, 0.66, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 120,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.5
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["-v.target_deltax*(v.emitter_age/v.emitter_lifetime)", "v.target_deltay*(v.emitter_age/v.emitter_lifetime)", "-0.5+(v.target_deltaz*0.05)-(v.target_deltaz*(v.emitter_age/v.emitter_lifetime))"],
				"radius": 0.275,
				"surface_only": true,
				"direction": ["(v.particle_random_1-0.5)*0.5", "(v.particle_random_2-0.5)*0.5", "-(v.particle_random_3+0.5)*2"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.25,0.35)"
			},
			"minecraft:particle_initial_speed": "v.target_deltaz*1.25",
			"minecraft:particle_motion_dynamic": {
				"linear_drag_coefficient": "v.target_deltaz*1.25"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.1*v.v", "0.1*v.v"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 45,
					"texture_height": 5,
					"flipbook": {
						"base_UV": [10, 0],
						"size_UV": [5, 5],
						"step_UV": [5, 0],
						"frames_per_second": 12,
						"max_frame": 5,
						"stretch_to_lifetime": true,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00000000",
						"0.3": "#ff000000",
						"0.7": "#FF000000",
						"1.0": "#00000000"
					}
				}
			}
		}
	}
}