{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:bubble_actor",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/bubble/smallbubble"
			}
		},
		"events": {
			"pop": {
				"particle_effect": {
					"effect": "cobblemon:bubble_actorpop",
					"type": "particle"
				}
			},
			"spray": {
				"particle_effect": {
					"effect": "cobblemon:bubble_actorspray",
					"type": "emitter"
				}
			},
			"spray2": {
				"particle_effect": {
					"effect": "cobblemon:bubble_actorbigspray",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 1
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.45
			},
			"minecraft:emitter_lifetime_events": {
				"creation_event": ["spray", "spray2"]
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["(-v.target_deltax*(v.emitter_age/v.emitter_lifetime))*(0.7+(0.05*v.target_deltax))", "(v.target_deltay*(v.emitter_age/v.emitter_lifetime))*(0.7+(0.05*v.target_deltay))", "-0.25+math.clamp(v.target_deltaz*0.2,0.2,0.5)-(v.target_deltaz*(v.emitter_age/v.emitter_lifetime))*(0.7+(0.05*v.target_deltaz))"],
				"radius": "0.075*(v.emitter_age+0.5)",
				"surface_only": true,
				"direction": ["(v.particle_random_1-0.5)*0.8", "((v.particle_random_2-0.5)*0.8)+((v.target_deltay*0.75)/v.target_distance)", -1]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.81,1.11)"
			},
			"minecraft:particle_lifetime_events": {
				"expiration_event": "pop"
			},
			"minecraft:particle_initial_speed": "v.target_deltaz*2",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 1, 0],
				"linear_drag_coefficient": 2
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.125, 0.125],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 48,
					"texture_height": 8,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 8],
						"step_UV": [8, 0],
						"frames_per_second": 8,
						"max_frame": 6,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.05,
				"expire_on_contact": true
			}
		}
	}
}