{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:frostbreath_actor",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/vanilla/generic"
			}
		},
		"curves": {
			"variable.gassize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 1, 1, 1, 1, 1]
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.target_deltaz=5;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 270,
				"max_particles": 10000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1.1
			},
			"minecraft:emitter_shape_point": {
				"direction": ["(-v.target_deltax+((v.particle_random_1-0.5)*0.3)*math.clamp(v.target_deltaz,2.5,5))+(math.cos(v.emitter_age*900)*0.5)", "(v.target_deltay+((v.particle_random_2-0.5)*0.3)*math.clamp(v.target_deltaz,2.5,5))+(math.sin(v.emitter_age*600)*0.25)", "-math.clamp(v.target_deltaz,2.5,5)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.75,1.25)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random_integer(0,3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(1.85,3.25)*v.target_deltaz",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*3", "1.5+(v.particle_random_2-0.5)*3", 0],
				"linear_drag_coefficient": 2.5
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.175*v.gassize", "0.175*v.gassize"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 64,
					"texture_height": 8,
					"flipbook": {
						"base_UV": [56, 0],
						"size_UV": [8, 8],
						"step_UV": [-8, 0],
						"frames_per_second": 6,
						"max_frame": 8,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_lighting": {},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#38FFFFFF",
						"0.28": "#A0DCF6FF",
						"0.67": "#A0B5E7FF",
						"1.0": "#005897FF"
					}
				}
			}
		}
	}
}