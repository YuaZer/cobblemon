{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:ember_target",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.shrink": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 0.94, 0.68, 0]
			}
		},
		"events": {
			"linger": {
				"particle_effect": {
					"effect": "cobblemon:ember_targetlinger",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 210,
				"max_particles": 10000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.05
			},
			"minecraft:emitter_lifetime_events": {
				"timeline": {
					"0.10": "linger"
				}
			},
			"minecraft:emitter_shape_point": {
				"direction": ["(v.particle_random_1-0.5)*2", "(v.particle_random_2-0.6)*2", "math.random(-0.85,0.35)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.45,0.85)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(5,10)*math.clamp(v.entity_height,1,1.5)",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "4+(v.particle_random_1-0.5)*3", "(v.particle_random_1-0.5)*3"],
				"linear_drag_coefficient": 4
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.45-(v.particle_random_4*0.1))*v.shrink", "(0.45-(v.particle_random_4*0.1))*v.shrink"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [48, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 16,
						"max_frame": 7
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 10,
				"collision_radius": 0.01
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.2": "#FFFFE872",
						"0.4": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.9": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}