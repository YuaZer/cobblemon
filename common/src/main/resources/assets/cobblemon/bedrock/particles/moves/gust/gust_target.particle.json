{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:gust_target",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/moves/small_gust"
			}
		},
		"curves": {
			"variable.debrissize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0, 1, 0.69, 0.35, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 240,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_looping": {
				"active_time": 0.05
			},
			"minecraft:emitter_shape_sphere": {
				"offset": [0, 0, "-0.4/math.clamp(q.entity_scale*1.1-0.1,1,9)"],
				"radius": 0.1,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.6,0.7)*0.8"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random_integer(0,3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(2.25,3.25)*2.5",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 4, 0],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.25*v.debrissize", "0.25*v.debrissize"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 56,
					"texture_height": 8,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 8],
						"step_UV": [8, 0],
						"frames_per_second": 14,
						"max_frame": 7,
						"loop": true
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.01,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#7AFFFFFF",
						"0.5": "#ffffffff",
						"1.0": "#00FFFFFF"
					}
				}
			}
		}
	}
}