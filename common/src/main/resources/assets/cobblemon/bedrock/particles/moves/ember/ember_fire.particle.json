{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:ember_fire",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/ember"
			}
		},
		"curves": {
			"variable.embsize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 60,
				"max_particles": 1000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.45
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["-v.target_deltax*(v.emitter_age/v.emitter_lifetime)", "v.target_deltay*(v.emitter_age/v.emitter_lifetime)", "-0.25+math.clamp(v.target_deltaz*0.1,0,0.25)-(v.target_deltaz*(v.emitter_age/v.emitter_lifetime))"],
				"radius": "0.1+(v.emitter_age*0.25)",
				"surface_only": true,
				"direction": ["((v.particle_random_1-0.5)*0.33)", "((v.particle_random_2-0.5)*0.33)+((v.target_deltay*0.75)/v.target_distance)", -1]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.38
			},
			"minecraft:particle_initial_speed": "v.target_deltaz*1.25",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, "(v.particle_random_3+0.5)*2.5", 0],
				"linear_drag_coefficient": "2.5+(v.emitter_age*2)"
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.1*v.embsize", "0.1*v.embsize"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 25,
					"texture_height": 5,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [5, 5],
						"step_UV": [5, 0],
						"frames_per_second": 20,
						"max_frame": 5
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.15": "#ffffffff",
						"1.0": "#FFFF4600"
					}
				}
			}
		}
	}
}