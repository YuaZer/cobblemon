			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.35,0.75)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(3,6.5)*1",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "2+(v.particle_random_1-0.5)*3", "(v.particle_random_1-0.5)*3"],
