{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:infestation_targetflyengulf",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/generic/flying_bugs"
			}
		},
		"components": {
			"minecraft:emitter_rate_instant": {
				"num_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 1
			},
			"minecraft:emitter_shape_sphere": {
				"radius": "math.random(q.entity_radius/2,q.entity_radius) * 4",
				"surface_only": true,
				"direction": "inwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "q.entity_radius"
			},
			"minecraft:particle_initial_speed": 5,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["math.random(-10,10)", 0, "math.random(-10,10)"],
				"linear_drag_coefficient": 0.5
			},
			"minecraft:particle_kill_plane": [0, 0, 1, 0],
			"minecraft:particle_appearance_billboard": {
				"size": [0.15, 0.15],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 16,
					"texture_height": 24,
					"flipbook": {
						"base_UV": [0, "math.floor(v.particle_random_2*3)*8"],
						"size_UV": [8, 8],
						"step_UV": [8, 0],
						"frames_per_second": 12,
						"max_frame": 2,
						"loop": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#00FFFFFF",
						"0.43": "#ffffffff",
						"1.0": "#FFFFFFFF"
					}
				}
			}
		}
	}
}