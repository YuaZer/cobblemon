{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:fireblast_target",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.fun": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 1, 0.96, 0.85, 0.6, -0.05]
			}
		},
		"events": {
			"auraCinder": {
				"particle_effect": {
					"effect": "cobblemon:fireblast_targetcinder",
					"type": "particle"
				}
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 500,
				"max_particles": 2000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.15
			},
			"minecraft:emitter_shape_point": {
				"direction": ["math.random(-1.35,1.35)", "math.random(-1.35,1.35)", "math.random(-1.2,0.2)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.35,0.975)"
			},
			"minecraft:particle_lifetime_events": {
				"timeline": {
					"0.35": "auraCinder"
				}
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": "math.random(1.5,6.5)*3",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "1+(v.particle_random_1-0.5)*3", "(v.particle_random_1-0.5)*3"],
				"linear_drag_coefficient": 3
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.7*v.fun)-(v.particle_random_4*0.35)", "(0.7*v.fun)-(v.particle_random_4*0.35)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [16, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 20,
						"max_frame": 9
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_drag": 2,
				"collision_radius": 0.1
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.2": "#FFFFE872",
						"0.4": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.9": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}