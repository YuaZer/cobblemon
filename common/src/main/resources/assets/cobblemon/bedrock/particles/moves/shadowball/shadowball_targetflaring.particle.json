{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:shadowball_targetflaring",
			"basic_render_parameters": {
				"material": "particles_blend",
				"texture": "textures/particles/generic/impact/impact_ghost"
			}
		},
		"curves": {
			"variable.flarefade": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 1, 0.96, 0.85, 0.5, 0]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 50,
				"max_particles": 100
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.5
			},
			"minecraft:emitter_shape_sphere": {
				"offset": ["-v.target_deltax*(v.emitter_age/v.emitter_lifetime)", "v.target_deltay*(v.emitter_age/v.emitter_lifetime)", "-0.5+(v.target_deltaz*0.05)-(v.target_deltaz*(v.emitter_age/v.emitter_lifetime))"],
				"radius": 0.315,
				"surface_only": true,
				"direction": "outwards"
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": 0.7
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.random_integer(0,3)*90"
			},
			"minecraft:particle_initial_speed": 0.7,
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": [0, 1, 0]
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["0.125*v.flarefade", "0.125*v.flarefade"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 56,
					"flipbook": {
						"base_UV": [0, 0],
						"size_UV": [8, 8],
						"step_UV": [0, 8],
						"frames_per_second": 8,
						"max_frame": 7,
						"stretch_to_lifetime": true
					}
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#003D1662",
						"0.33": "#FFDECDFF",
						"1.0": "#FF3D1662"
					}
				}
			}
		}
	}
}