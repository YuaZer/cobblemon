{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:ember_actor",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/fire/cloudyfire_white"
			}
		},
		"curves": {
			"variable.fun": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 1, 1, 1, 1, 1, 0.96, 0.85, 0.6, -0.05]
			}
		},
		"events": {
			"fire": {
				"particle_effect": {
					"effect": "cobblemon:ember_fire",
					"type": "emitter"
				}
			},
			"sparks": {
				"particle_effect": {
					"effect": "cobblemon:ember_firesparks",
					"type": "emitter"
				}
			}
		},
		"components": {
			"minecraft:emitter_initialization": {
				"creation_expression": "v.target_deltaz=5;"
			},
			"minecraft:emitter_rate_steady": {
				"spawn_rate": 90,
				"max_particles": 10000
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 0.1
			},
			"minecraft:emitter_lifetime_events": {
				"timeline": {
					"0.05": ["fire", "sparks"]
				}
			},
			"minecraft:emitter_shape_point": {
				"direction": ["((v.particle_random_1-0.5)*1.25)*v.target_deltaz", "(((v.particle_random_2-0.5)*1.5)*v.target_deltaz)+v.target_deltay", "-v.target_deltaz/(v.emitter_age*15)"]
			},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.675,0.95)"
			},
			"minecraft:particle_initial_spin": {
				"rotation": "math.round(v.particle_random_4*3)*90"
			},
			"minecraft:particle_initial_speed": "((v.particle_random_4+0.33)*8.5)-v.emitter_age",
			"minecraft:particle_motion_dynamic": {
				"linear_acceleration": ["(v.particle_random_1-0.5)*4", "2+(v.particle_random_2-0.5)*3", "(v.particle_random_3-0.75)*4"],
				"linear_drag_coefficient": 5
			},
			"minecraft:particle_appearance_billboard": {
				"size": ["(0.4*v.fun)-(v.particle_random_4*0.2)", "(0.4*v.fun)-(v.particle_random_4*0.2)"],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 160,
					"texture_height": 16,
					"flipbook": {
						"base_UV": [16, 0],
						"size_UV": [16, 16],
						"step_UV": [16, 0],
						"frames_per_second": 20,
						"max_frame": 9
					}
				}
			},
			"minecraft:particle_motion_collision": {
				"collision_radius": 0.02,
				"expire_on_contact": true
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#ffffffff",
						"0.2": "#FFFFE872",
						"0.4": "#FFFFCC00",
						"0.55": "#FFFF9400",
						"0.75": "#FFFF4700",
						"0.9": "#FFFF4700",
						"1.0": "#FF531C0E"
					}
				}
			}
		}
	}
}