{
	"format_version": "1.10.0",
	"particle_effect": {
		"description": {
			"identifier": "cobblemon:explosion_actororbs",
			"basic_render_parameters": {
				"material": "particles_alpha",
				"texture": "textures/particles/generic/orb/scalingshaded"
			}
		},
		"curves": {
			"variable.orbsize": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [0.05, 0.38, 0.9, 1, 0.9, 0.1, 0]
			},
			"variable.orbmovement": {
				"type": "linear",
				"input": "v.particle_age",
				"horizontal_range": "v.particle_lifetime",
				"nodes": [1, 0.91, 0.66, 0.24, 0.07]
			}
		},
		"components": {
			"minecraft:emitter_rate_steady": {
				"spawn_rate": "100*(math.pow(v.emitter_age,3)) ",
				"max_particles": 400
			},
			"minecraft:emitter_lifetime_once": {
				"active_time": 2.5
			},
			"minecraft:emitter_shape_point": {},
			"minecraft:particle_lifetime_expression": {
				"max_lifetime": "math.random(0.2,0.4) + 0.2"
			},
			"minecraft:particle_motion_parametric": {
				"relative_position": [" (v.orbmovement) * (v.particle_random_1-0.5) * math.max(v.entity_radius*2+2, 8)", " (v.orbmovement) * (v.particle_random_2-0.5) * math.max(v.entity_radius*2+2, 8)", " (v.orbmovement) * (v.particle_random_3-0.5) * math.max(v.entity_radius*2+2, 8)"]
			},
			"minecraft:particle_appearance_billboard": {
				"size": [0.15, 0.15],
				"facing_camera_mode": "rotate_xyz",
				"uv": {
					"texture_width": 8,
					"texture_height": 32,
					"uv": [0, "math.floor(v.orbsize*3)*8"],
					"uv_size": [8, 8]
				}
			},
			"minecraft:particle_appearance_tinting": {
				"color": {
					"interpolant": "v.particle_age / v.particle_lifetime",
					"gradient": {
						"0.0": "#FFF47211",
						"0.18": "#FFFFFF55",
						"0.39": "#ffffffff",
						"0.74": "#ffffffff",
						"0.88": "#FFFFFF55",
						"1.0": "#FFF47211"
					}
				}
			}
		}
	}
}